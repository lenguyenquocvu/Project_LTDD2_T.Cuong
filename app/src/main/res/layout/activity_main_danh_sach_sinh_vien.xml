<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".activities.MainDanhSachSinhVien">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tvMaSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17211OT748"/>
        <TextView
            android:id="@+id/tvHoTenSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn Anh"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvMaHP"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mã học phần"/>
        <TextView
            android:id="@+id/tvTenHP"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tên học phần"/>
        <TextView
            android:id="@+id/tvSoTinChi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số tín chỉ"/>
        <TextView
            android:id="@+id/tvDiem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Điểm"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvMonHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Môn học 1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvDiemMHSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>
        <TextView
            android:id="@+id/tvDiemMH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSinhVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>