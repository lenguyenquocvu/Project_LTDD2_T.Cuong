<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:swipe="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/cardView_margin"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <!--Phần layout lướt từ phải qua trái-->

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        style="@style/SwipeStyle">

        <TextView
            android:id="@+id/tvEdit"
            android:text="@string/swipeEdit"
            style="@style/SwipeItemEditStyle"/>

        <TextView
            android:id="@+id/tvDelete"
            android:text="@string/swipeDelete"
            style="@style/SwipeItemDeleteStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMaSV"
            style="@style/TextViewIdEven"
            android:textColor="@color/textColorItemRecyclerViewEven" />

        <TextView
            android:id="@+id/txtTenSV"
            style="@style/TextViewTenEven" />

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>